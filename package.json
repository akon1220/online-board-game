{
  "name": "game-platform",
  "homepage": "http://localhost:3000",
  "license": "UNLICENSED",
  "scripts": {
    "client": "webpack --watch --mode development",
    "server": "ts-node-dev -r tsconfig-paths/register server/src/server.ts",
    "dev": "concurrently -n client,server 'yarn client' 'yarn server'",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:build:client": "webpack",
    "test:build:server": "webpack --config webpack.server.config.js",
    "lint": "eslint client server --ext ts,tsx",
    "lint:fix": "eslint --fix client server --ext ts,tsx",
    "build:client": "webpack --progress --mode production",
    "build:server": "webpack --progress --config webpack.server.config.js --mode production",
    "start": "pm2-runtime server/dist/server.js"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "@types/express": "^4.17.6",
    "@types/form-data": "^2.5.0",
    "@types/jest": "^25.2.3",
    "@types/js-cookie": "^2.2.6",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.0.0",
    "@types/react-redux": "^7.1.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/react-test-renderer": "^16.9.2",
    "@types/socket.io": "^2.1.6",
    "@types/socket.io-client": "^1.4.33",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "axios": "^0.19.2",
    "bitbar-webpack-progress-plugin": "^1.0.0",
    "concurrently": "^5.2.0",
    "copy-to-clipboard": "^3.3.1",
    "css-loader": "^3.5.3",
    "dayjs": "^1.8.27",
    "ejs": "^3.1.3",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.1",
    "express": "^4.17.1",
    "file-loader": "^6.0.0",
    "form-data": "^3.0.0",
    "husky": "^4.2.5",
    "ignore-styles": "^5.0.1",
    "jest": "^26.0.1",
    "jest-css-modules": "^2.1.0",
    "js-cookie": "^2.2.1",
    "lint-staged": "^10.2.2",
    "pixi.js": "^5.3.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-jss": "^10.1.1",
    "react-markdown": "^4.3.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "resolve-url-loader": "^3.1.1",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.4",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.2",
    "url-loader": "^4.1.0",
    "uuid": "^8.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^2.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "client/**/*.ts{,x}": "eslint",
    "server/**/*.ts{,x}": "eslint",
    "*.js{,x}}": "eslint"
  }
}
